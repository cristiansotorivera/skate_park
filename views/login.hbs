<h1> 游띷 Skate Park 游띷</h1>

<div class="py-5">
    <h2>Iniciar Sesi칩n</h2>
    <hr class="w-50" />

    <div id="alerta" class="alert alert-danger d-none" role="alert">
        Por favor, completa todos los campos.
    </div>
    <form id="formLogin">
        <div class="form-group">
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control w-50 m-auto" name="email" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control w-50 m-auto" name="password" />
            </div>
        </div>
        <button type="submit" class="btn btn-success mb-3">Ingresar</button>
        <p>쮸칰n no tienes cuenta? <a href="/registrar">Reg칤strate</a></p>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    // Selecciona el formulario de inicio de sesi칩n por su ID
    const loginForm = document.querySelector('#formLogin');
    
    // A침ade un evento 'submit' al formulario
    loginForm.addEventListener('submit', async (e) => {
        e.preventDefault(); // Previene el comportamiento predeterminado del formulario

        // Obtiene los valores de los campos email y password del formulario
        const email = e.target.email.value;
        const password = e.target.password.value;

        try {
            // Env칤a una solicitud POST al servidor con los datos de inicio de sesi칩n
            const { data } = await axios.post('/login', { email, password });

            console.log(data); // Imprime la respuesta del servidor en la consola

            // Almacena el token de autenticaci칩n en el almacenamiento local
            localStorage.setItem('token', data.msg.token);
            console.log(data.msg.role_id); // Imprime el role_id del usuario en la consola

            // Redirige al usuario seg칰n su role_id
            if (data.msg.role_id === 1) {
                window.location.href = '/admin'; // Redirige a la p치gina de administraci칩n si el usuario es administrador
                return;
            }
            window.location.href = '/datos'; // Redirige a la p치gina de datos si el usuario no es administrador
        } catch (error) {
            console.log(error); // Imprime cualquier error en la consola
        }
    });
</script>
